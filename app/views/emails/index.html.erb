<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>uid</th>
          <th>From</th>
          <th>Subject</th>
          <th>Body</th>
          <th>message_id</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @emails.each do |e| %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.uid %></td>
            <td><%= e.from %></td>
            <td><%= e.subject %></td>
            <td><%= truncate(e.body, length: 100) %></td>
            <td><%= e.message_id %></td>
            <td><%= e.message_id %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>